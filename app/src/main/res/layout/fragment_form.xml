<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Form"
    >

    <TextView
        android:id="@+id/name_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="23dp"
        android:text="Name"
        android:textColor="#000"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/name_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="46dp"
        android:layout_toEndOf="@+id/name_Tv"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/location_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_Tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Location"
        android:textColor="#000"
        android:textSize="22sp" />

    <Spinner
        android:id="@+id/location_SP"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_ET"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="48dp"
        android:layout_toEndOf="@+id/location_TV" />

    <TextView
        android:id="@+id/profilepic_TV"
        android:layout_width="79dp"
        android:layout_height="61dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Profile Picture"
        android:textColor="#000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/dateobirth_TV"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilepic_TV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Gender"
        android:textColor="#000"
        android:textSize="22sp" />

    <RadioGroup
        android:id="@+id/gender_RD"
        android:layout_width="191dp"
        android:layout_height="29dp"
        android:layout_below="@+id/date_BT"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="31dp"
        android:layout_toEndOf="@+id/dateobirth_TV"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/female_RBT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Female" />

        <RadioButton
            android:id="@+id/male_RBT"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Male" />


    </RadioGroup>

    <TextView
        android:id="@+id/hobbies_TV"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateobirth_TV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Hobbies"
        android:textColor="#000"
        android:textSize="22sp" />

    <CheckBox
        android:id="@+id/hobbies_CB"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender_RD"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="81dp"
        android:layout_toEndOf="@+id/hobbies_TV"
        android:text="Yes/No" />

    <TextView
        android:id="@+id/department_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hobbies_TV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Department"
        android:textColor="#000"
        android:textSize="22sp" />

    <Spinner
        android:id="@+id/department_SP"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hobbies_CB"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="-2dp"
        android:layout_toEndOf="@+id/department_TV" />

    <TextView
        android:id="@+id/yearostudy_TV"
        android:layout_width="77dp"
        android:layout_height="55dp"
        android:layout_below="@+id/department_TV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Year of Study"
        android:textColor="#000"
        android:textSize="22sp" />

    <RadioGroup
        android:id="@+id/yearostudy_RD"
        android:layout_width="201dp"
        android:layout_height="45dp"
        android:layout_below="@+id/department_SP"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="17dp"
        android:layout_toEndOf="@+id/yearostudy_TV"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/first_year_RBT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="First" />

        <RadioButton
            android:id="@+id/second_year_RBT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Second" />

        <RadioButton
            android:id="@+id/third_year_RBT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Third" />

    </RadioGroup>

    <TextView
        android:id="@+id/expectaions_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yearostudy_TV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Expectations"
        android:textColor="#000"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/expectations_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expectaions_TV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submit_BT"
        android:layout_width="85dp"
        android:layout_height="41dp"
        android:layout_below="@+id/expectations_ET"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="130dp"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_TV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Date of Birth"
        android:textColor="#000"
        android:textSize="22sp" />

    <Button
        android:id="@+id/date_BT"
        android:layout_width="132dp"
        android:layout_height="37dp"
        android:layout_below="@+id/location_SP"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="Date" />

</RelativeLayout>